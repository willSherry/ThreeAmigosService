@model ThreeAmigosWebsite.Models.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h2>@ViewData["Title"].</h2>

            <div class="col-md-2">
                <img src="@Model.ProfileImage"
                     alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-md-4">
                <h3>Username: @Model.Name</h3>
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> Email: @Model.EmailAddress
                </p>
                @if (Model.BillingAddress == null)
                {
                    <p>
                        <i class="glyphicon glyphicon-envelope"></i> Billing Address: Edit profile to add address
                    </p>    
                }
                else
                {
                    <p>
                        <i class="glyphicon glyphicon-envelope"></i> Billing Address: @Model.BillingAddress
                    </p>
                }
                @if (Model.PhoneNumber == null)
                {
                    <p>
                    <i class="glyphicon glyphicon-envelope"></i>Phone Number: Edit profile to add phone number
                    </p>
                }
                else
                {
                    <p>
                        <i class="glyphicon glyphicon-envelope"></i> Phone Number: @Model.PhoneNumber
                    </p>
                }
            </div>
        </div>
    </div>
</div>
<button>
    <a class="nav-link text-dark" asp-asp-area="" asp-controller="Account" asp-action="EditProfile">Edit Profile</a>
</button>
@using (Html.BeginForm("DeleteProfile", "Account", FormMethod.Post))
{
    <button type="submit" class="btn btn-primary">Delete Profile</button>
}